EXE = battle
SRC = battle.cpp windows.cpp menus.cpp ascii_art.cpp story.cpp errors.cpp colors.cpp grid.cpp combat.cpp character.cpp
OBJ = $(SRC:.cpp=.o)

CC = g++
CFLAGS = -g3 -Wall -I../include
LFLAGS = -lncurses -lpopt -lm

%.o: $(SRC)
	$(CC) -c -o $@ $< $(CFLAGS)

#all: $(OBJ)
#	$(CC) $(OBJ) $(LFLAGS) $(CFLAGS) -o $(EXE)

all: $(SRC)
	$(CC) $(SRC) $(LFLAGS) $(CFLAGS) -o $(EXE)

run: all
	./$(EXE)

clean:
	rm -f $(OBJ) $(EXE)